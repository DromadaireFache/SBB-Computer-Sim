n = 3
x = 0
y = 1

ret_n:
    lda     n
    jump    &&&end
    lda     y       *end
    halt

start:
    lda     n
    cmp#    2
    jplt    ret_n
    ldi     0       *loop
    inc
    sta     &&loop 
    cmp     n
    jpeq    &end
    lda     x
    add     y
    sta     y
    take
    sta     x
    jump    &loop